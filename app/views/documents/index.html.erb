<p id="notice"><%= notice %></p>

<h1>提出管理</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>期限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.memo %></td>
        <td><%= document.deadline %></td>
        <td><%= link_to '見る', document %></td>
        <td><%= link_to '編集', edit_document_path(document) %></td>
        <td><%= link_to '削除', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規', new_document_path,class:"btn btn-primary" %>
