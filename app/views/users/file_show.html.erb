<div class="text-center text-primary" style="font-size:30px;font-weight:bold;">
    <h2><%= "#{@user.name}さん提出済み資料" %></h2><hr>
    <div class="text-danger"><h1><%= @document.title %></h1></div>
    <div class="text-success"><h3><%= @document.memo %></h3></div>
</div>
<% answer = reply_view(@document) %>
<% questions = @document.document_items.all %>
<% questions.count.times do |i|  %>
  <div class="user_answer">
    <h2 style="font-weight:bold;"><%= questions[i].content %></h2>
    <div style="border-top: 1px dotted black"></div>
    <span class="text-danger" style="font-weight:bold;">回答:</span><span ciass="text-primary" style="font-size:18px;font-weight:bold;"><%= answer[i].split(":")[1] %></span>
  </div>
  
<% end %>
<div class="text-center">
  <%= link_to "戻る",user_path(@user),class:"btn btn-success",style:"width:60%" %>
</div>
